<article class = "Log-in">
  <div class="container mt-5">
    <header>
        <h1 class = "Login-heading">
            Login
        </h1>
    </header>
     
    <div class="row">
      <div class="col-sm-8">
        <div class = "card">
        <div class="card-body">
          <form action = "/login" method ="POST" id = "login-form">
    <br>
    <div class="form-group">
    <label class = "user-text" for = "username">
        User Name :
    </label>
    <input class="input100" class="form-control" name = "username" id = "username" type = "text" placeholder="username" required>
    <br>
    </div>
    <div class="form-group">
    <label class = "password-text" for = "password">
        Password : 
    </label>
    <input class="input100" class="form-control" name = "password" id = "password" type = "password" placeholder="password" required>
    <br>
    </div>
    {{!-- <input class = "login-button"  class="btn btn-dark" type = "submit" value = "Login"> --}}
    <button type = "submit"  class="btn btn-dark">Login</button>
    </form>
    {{#if error}}
    <p class = "login-error">{{error}}</p>
    {{/if}}
    <p>New User? <a href="/signup" >Click here</a> to signup</p> 
    <p id ="user-error" hidden>Either the username or password is incorrect</p>
    <p id = "pass-error" hidden>Either the username or password is incorrect</p>
  </div>
  </div>
  </div>
  </div>
  </div>
  </article>