<article class = "Sign-up">
    <header>
        <h1 class = "Signup-heading">
            Edit Profile
        </h1>
    </header>
    <form action = "/edit/shop/{{userId._id}}" method ="POST" >


    <label class = "user-text" for = "shopName">
            Shop Name:
        </label>
        <input name = "ShopName" id = "shopName" type = "text" value="{{userId.ShopName}}">
        <br>
        <label class = "user-text" for = "username">
            User Name : 
        </label>
        <input name = "username" id = "username" type = "text" value = "{{userId.username}}">
        <br>
        <label class = "user-text" for = "ownerFirstname">
            First Name:
        </label>
        <input name = "ownerFirstname" id = "ownerFirstname" type = "text" value = "{{userId.ownerFirstname}}">
        <br>
        <label class = "password-text" for = "ownerLastname">
            Last Name :
        </label>
        <input name = "ownerLastname" id = "ownerLastna`me" type = "text" value = "{{userId.ownerLastname}}">
        <br>
        <label class = "password-text" for = "Address">
            Address :
        </label>
        <input name = "Address" id = "Address" type = "text" value = "{{userId.Address}}">
        <br>
        <label class = "password-text" for = "email">
            Email :
        </label>
        <input name = "email" id = "email" type = "email" value = "{{userId.email}}">
        <br>
        <label class = "password-text" for = "pincode">
            Pincode :
        </label>
        <input name = "pincode" id = "pincode" type = "number" value = "{{userId.pincode}}">
        <br>
        <label class = "password-text" for = "phoneNumber">
            Phone number :
        </label>
        <input name = "phoneNumber" id = "phoneNumber" type = "number" value = "{{userId.phoneNumber}}">
        <br>
        <br>
        <input name = "_method" hidden value = "PUT"> 
        <input class = "submit-button" type = "submit" value = "Done">
    </form>
    {{#if error}}
    <p class = "error">{{error}}</p>
    {{/if}}
<p id = "success-edit" hidden>Account upadted successfully</p>
<p id = "suser-error" hidden>Either the username or password is incorrect</p>
</article> 