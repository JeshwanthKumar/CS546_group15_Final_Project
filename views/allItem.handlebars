{{#if msgForShop}}

<table id="message" width="90%" border="2">

    <tr>
        <th>Date</th>
        <th>User Name</th>
        <th>Message</th>
  
    </tr>
    {{#each msgForShop}}
    <tr>
        {{!-- <td>{{this.idUser}}</td> --}}

        <td>{{this.date}}</td> 
        {{!-- <td>{{this.firstname}}</td> --}}
        <td>{{this.userName}}</td>
        <td>{{this.message}}</td>
        <td>
