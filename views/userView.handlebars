</h3>
{{/if}}
{{#if noSecond}}
<h3 style="background-color: #FDDA0D;" for="noRating">{{noSecond}}
</h3>
{{/if}}

    {{#if comm}}
    <p>{{comm}}</p>
    {{/if}}
</tr>

{{#if noComment}}
<p id="message">{{noComment}}</p>
{{/if}}

{{#if commentForShop}}
<h2> Review from Customers</h2>
<table id="comment" width="60%" border="5">
    <tr>
        <th>User Name</th>
        <th>Comment</th>
        <th>Date</th>
    </tr>
    {{#each commentForShop}}
    <tr>
        <td>{{this.userName}}</td>

        {{!-- <td>{{this.firstname}}</td> --}}

        <td>{{this.comment}}</td>
        <td>
            {{this.date}}
        </td>
    </tr>

    {{/each}}

</table>
{{/if}}
                    </div>
                </div>
            </div>
        </section>
