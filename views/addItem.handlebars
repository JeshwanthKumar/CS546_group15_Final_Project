<a class="get-home" href="/shop">To Home Page</a>

<main class="ab">
    {{!-- <p id="bold">logIn form</p> --}}
    <h1>Add Item in {{shopName}}</h1>

    <form method="post" id="addItem-form" action="/shopId/{{shopId}}">

        <label>{{shopId}} </label>
        <br>
        <br>

        <label for="productname">Product Name</label>
        <input id="productname" type="text" name="productname" placeholder="Product Name" value="John" />
        <br>
        <br>

        <label>Product Details</label>
        <input id="productdetails" type="text" name="productdetails" placeholder="ProductDetails" value="John" />
        <br>
        <br>

        <label>Product Highlights</label>
        <input type="text" name="producthighlights" placeholder="Product Highlights" value="John" />
        <br>
        <br>

        <label>Price</label>
        <input type="text" name="price" placeholder="Price ( $ )" value="John" />
        <br>
        <br>


        <label>Quantity Remaining</label>
        <input type="number" name="quantityremaining" placeholder="Quantity Remaining" value="5" />
        <br>
        <br>

        <label>Date of Manufacture</label>
        <input type="text" name="dateofmanufacture" placeholder="Date of Manufacture" value="John" />
        <br>
        <br>

        <label>Date of Expiry</label>
        <input type="text" name="dateofexpiry" placeholder="Date of Expiry" value="John" />
        <br>
        <br>

        {{!-- <div class="form-group hidden" id="error-container">
            <div class="alert alert-danger text-goes-here">
            </div>
        </div> --}}

       <div class="form-group">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>

    </form>

</main>